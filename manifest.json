{
  "manifest_version": 3,
  "name": "Video Speed Controller",
  "version": "1.0",
  "description": "Control video speed with keyboard shortcuts on any website",
  "action": {    
    "default_icon": {
      "64": "icon64.png"
    }
  },
  "icons": {
    "64": "icon64.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"], /* Áp dụng cho mọi URL */
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "permissions": []
}